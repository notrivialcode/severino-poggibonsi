{
  "name": "severino-poggibonsi",
  "version": "1.0.0",
  "description": "A GitHub bot for NOTRIVIAL organization - manages stale PRs, cleans up merged branches, and notifies contributors",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "bot:stale-prs": "ts-node src/cli/stalePrs.ts",
    "bot:cleanup-branch": "ts-node src/cli/cleanupBranch.ts",
    "bot:check-manual-merges": "ts-node src/cli/checkManualMerges.ts"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "probot": "^13.0.0",
    "@slack/web-api": "^7.0.0",
    "@octokit/rest": "^20.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
