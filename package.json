{
  "name": "severino-poggibonsi",
  "version": "1.0.0",
  "description": "A GitHub bot for NOTRIVIAL organization - manages stale PRs, cleans up merged branches, and notifies contributors",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "next lint",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "bot:stale-prs": "tsx src/cli/stalePrs.ts",
    "bot:cleanup-branch": "tsx src/cli/cleanupBranch.ts",
    "bot:check-manual-merges": "tsx src/cli/checkManualMerges.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "probot": "^13.0.0",
    "@slack/web-api": "^7.0.0",
    "@octokit/rest": "^20.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nock": "^13.5.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
